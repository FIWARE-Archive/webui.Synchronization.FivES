struct Guid {

}

struct AttributeSyncInfo {
  i64 LastTimestamp;
  Guid LastSyncID;
  any LastValue;
}

struct ComponentSyncInfo {
  array<AttributeSyncInfo> Components;
}

struct EntitySyncInfo {
  array<ComponentSyncInfo> Components;
}

service sync {
    Guid getSyncID();
	void addEntity(Guid guid, EntitySyncInfo remoteSyncInfo);
	void removeEntity(Guid guid);
	void changeAttributes(Guid guid, EntitySyncInfo changedAttributes);
}