<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Core" 
                   namespace="FIVES">
	<class name="Component" lazy="false">
		<id name="Id" type = "Guid">
			<generator class = "guid" />
    	</id>
		<map name="attributes" table = "attributes_to_components" cascade = "all">
		  <key column = "componentID" />
		  <index type = "string" column = "attributeName" />
		  <many-to-many column = "attributeID" class="Attribute" />
		</map>
	</class>
</hibernate-mapping>
